<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/booking_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/equipment_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fan" />

        <TextView
            android:id="@+id/equipment_name"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/equipment_image"
            android:layout_marginStart="19dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/equipment_image"
            android:text="Name"
            android:textStyle="bold"

            android:textColor="@color/black" />

        <TextView
            android:id="@+id/equipment_price"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equipment_name"
            android:layout_alignStart="@+id/equipment_name"
            android:layout_marginStart="1dp"
            android:layout_marginTop="8dp"
            android:text="Price" />

        <TextView
            android:id="@+id/booking_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equipment_price"
            android:layout_alignStart="@+id/equipment_price"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="22dp"
            android:text="Status" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>